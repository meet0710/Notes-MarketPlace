    <section id="adminmanagecountry">
        <div class="container">
            <div class="row heading">
                <div class="col-md-12">
                    <h4>Manage Country</h4>
                </div>
            </div>
            <div class="row search">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form>
                        <a href="@Url.Action("AddCountry","Admin")">
                            <button type="button" class="btn btn-primary mb-2" style="text-transform: uppercase;" onclick="location.href='@Url.Action("AddCountry","Admin")'">Add Country</button>
                        </a>
                    </form>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="form-inline searchform">
                        <div class="form-group mx-sm-3 mb-2">

                            <input type="text" class="form-control" id="search" placeholder="Search">
                        </div>
                        <button type="submit" data-table-id="#tableData" data-search-input="#search" class="btn btn-primary mb-2 searchandfilter search-in-table">Search</button>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table tablesorter" id="tableData" data-sort-on-col-and-order="3,1">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Sr No.</th>
                            <th scope="col">Country name</th>
                            <th scope="col" class="text-center">Country Code</th>
                            <th scope="col">Date Added</th>
                            <th scope="col">Added by</th>
                            <th scope="col" class="text-center">Active</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody data-tr-per-page="5">
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="text-center"><span>@(++i)</span></td>
                            <td>@item.country.Name</td>
                            <td class="text-center">@item.country.CountryCode</td>
                            @{DateTime da = DateTime.Parse(item.country.CreatedDate.ToString());
                                string date = da.ToString("dd-MM-yyyy, HH:mm");}
                            <td>@date</td>
                            <td>@item.user.FirstName @item.user.LastName</td>
                            @if (item.country.isActive == true)
                            {
                                <td class="text-center">Yes</td>
                            }
                            else
                            {
                                <td class="text-center">No</td>
                            }
                            <td>
                                <a href="@Url.Action("EditCountry","Admin",new { id = item.country.ID})"><img src="~/Content/img/Dashboard/Dashboard/edit.png"></a>
                                <a href="@Url.Action("DeleteCountry","Admin",new { id = item.country.ID})" onclick="return confirm('Are you sure you want to make this country inactive?');"><img src="~/Content/img/images/delete.png"></a>
                            </td>

                        </tr>
                        }
