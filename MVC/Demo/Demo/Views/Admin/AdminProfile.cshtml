    <div id="adminprofile">
        <form class="container" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <h4>My Profile</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p>First Name <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="firstname" placeholder="Enter your first name">*@
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your first name" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p>Last Name <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="lastname" placeholder="Enter your last name">*@
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your last name" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p>Email <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="email" placeholder="Enter your email">*@
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p>Secondary Email</p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="secondaryemail" placeholder="Enter your email">*@
                        @Html.EditorFor(model => model.Secondaryemail, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p>Phone Number</p>
                    <div class="row">
                        <div class="col-md-3 col-sm-3 col-xs-4">
                            <div class="form-group">
                                @*<select class="form-control" id="countrycode">
            <option>+91</option>
            <option>+11</option>
            <option>+92</option>
            <option>+01</option>
        </select>*@
                                @Html.DropDownListFor(model => model.code, new SelectList(ViewBag.CountryList, "CountryCode", "CountryCode"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-9 col-xs-8">
                            <div class="form-group">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Phoneno, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Phone no" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p>Profile Picture</p>
                    <div class="form-group custom-drop-file text-center">
                        <input type="file" class="form-control" id="img-upload" placeholder="Upload a picture" name="ProfilePicture">
                        <img src="~/Content/img/images/upload-file.png" alt="icon">
                        <p>Upload a Picture</p>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button class="btn btn-general btn-yellow" type="submit" title="Submit" role="button">Submit</button>
                </div>
            </div>



        </form>
    </div>
    <hr>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
