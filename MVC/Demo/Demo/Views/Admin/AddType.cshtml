            <div class="row">
                <div class="col-md-12">
                    <h4>Add Type</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p>Type <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Type" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p>Description <sup>&#8727;</sup></p>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your description" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button class="btn btn-general btn-yellow" href="#" title="Submit" role="button" type="submit">Submit</button>
