    <div id="adminmanagesystem">
        <form class="container" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <h4>Manage System Configuration</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Support email address</p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="supportemail" placeholder="Enter support email address" name="supportemail">*@
                        @Html.EditorFor(model => model.supportemail, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter support email address" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Support phone number</p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="supportphonenumber" placeholder="Enter support phone number" name="supportphoneno">*@
                        @Html.EditorFor(model => model.supportphoneno, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter support phone number" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Email Address(es) (for various events system will send notifications to the users)</p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="email" placeholder="Enter your email address" name="email">*@
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email address" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Facebook URL</p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="fburl" placeholder="Enter facebook url" name="fburl">*@
                        @Html.EditorFor(model => model.fburl, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Facebook URL" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Twitter URL</p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="twitterurl" placeholder="Enter twiiter url" name="twitterurl">*@
                        @Html.EditorFor(model => model.twitterurl, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter twitter url" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Linkedin URL</p>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="fburl" placeholder="Enter linkedin url" name="linkedinurl">*@
                        @Html.EditorFor(model => model.linkedinurl, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Linkedin url" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Default image for notes (if seller do not upload)</p>
                    <div class="form-group custom-drop-file text-center">
                        <input type="file" class="form-control" id="img-upload" placeholder="Upload a picture" name="defaultnote">
                        <img src="~/Content/img/images/upload-file.png" alt="icon">
                        <p>Upload a Picture</p>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <p>Default profile picture (if seller do not upload)</p>
                    <div class="form-group custom-drop-file text-center">
                        <input type="file" class="form-control" id="img-upload" placeholder="Upload a picture" name="defaultprofile">
                        <img src="~/Content/img/images/upload-file.png" alt="icon">
                        <p>Upload a Picture</p>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <button class="btn btn-general btn-yellow" title="Submit" role="button" type="submit">Submit</button>
                </div>
            </div>



        </form>
    </div>
    <hr>
