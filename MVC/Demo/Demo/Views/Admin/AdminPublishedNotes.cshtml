                    <tbody data-tr-per-page="5">
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><span>@(++i)</span></td>
                                <td><a href="@Url.Action("NoteDetails", "Home", new { id = item.Note.ID })"><span>@item.Note.Title</span></a></td>
                                <td>@item.category.Name</td>
                                @if (item.Note.IsPaid == true)
                                {
                                    <td>Paid</td>
                                }
                                else
                                {
                                    <td>Free</td>
                                }

                                <td>$@item.Note.SellingPrice</td>
                                <td>@item.user.FirstName @item.user.LastName</td>
                                <td><a href="@Url.Action("AdminMemberDetails", "Admin", new { memberid = item.user.ID })"><img src="~/Content/img/Dashboard/Dashboard/eye.png"></a></td>
                                @{DateTime da = DateTime.Parse(item.Note.ModifiedDate.ToString());
                                    string date = da.ToString("dd-MM-yyyy, HH:mm");}
                                <td>@date</td>
                                <td>@item.approver.FirstName @item.approver.LastName</td>
                                <td class="text-center"><a href="@Url.Action("AdminDownloads", "Admin", new { noteid = item.Note.ID })"><span>@item.Total</span></a></td>
                                <td class="dropdown">
                                    <img src="~/Content/img/images/dots.png" class="dropbtn" onclick="myFunction()">
                                    <div id="myDropdown" class="dropdown-content">
                                        <a href="@Url.Action("DownloadSoldNotes", "User", new { noteid = item.Note.ID })">Download Notes</a>
                                        <a href="@Url.Action("NoteDetails", "Home", new { id = item.Note.ID })">View more details</a>
                                        @{string str = "mymodal" + item.Note.ID;}
                                        <a onclick=openmodal1("@str")>Unpublish</a>
                                    </div>
                                </td>
                            </tr>

                            <div id=@str class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <span class="close" onclick=closemodal1("@str")>&times;</span>

                                        <h4>@item.Note.Title</h4>


                                    </div>

                                    <div class="modal-body">
                                        <form method="post">

                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="noteid" value="@item.Note.ID" />

                                            <div class="comments">
