    <section id="adminpublished">
        <div class="container">
            <div class="row heading">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <h4>Published Notes</h4>
                    <p>Seller</p>
                </div>
            </div>
            <div class="row search">

                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form>

                        <div class="form-group">
                            <select class="form-control" id="seller">
                                <option>Khayati</option>
                                <option>Rahul</option>
                                <option>Raj</option>
                                <option>Niya</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="form-inline searchform">
                        <div class="form-group mx-sm-3 mb-2">

                            <input type="text" class="form-control" id="search" placeholder="Search">
                        </div>
                        <button type="submit" data-table-id="#tableData" data-search-input="#search" class="btn btn-primary mb-2 searchandfilter search-in-table">Search</button>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table" id="tableData">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Sr No.</th>
                            <th scope="col">Note Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Sell Type</th>
                            <th scope="col">Price</th>
                            <th scope="col" class="seller">Seller</th>
                            <th scope="col"></th>
                            <th scope="col" class="date">Published Date</th>
                            <th scope="col">Approved by</th>
                            <th scope="col" class="text-center">Number of Downloads</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody data-tr-per-page="5">
                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><span>@(++i)</span></td>
                                <td><span>@item.Note.Title</span></td>
                                <td>@item.category.Name</td>
                                @if(item.Note.IsPaid == true)
                                {
                                    <td>Paid</td>
                                }
                                else
                                {
                                    <td>Free</td>
                                }

                                <td>$@item.Note.SellingPrice</td>
                                <td>@item.user.FirstName @item.user.LastName</td>
                                <td><img src="~/Content/img/Dashboard/Dashboard/eye.png"></td>
                                <td>25-11-2020, 11:08</td>
                                <td>Raj Sheth</td>
                                <td class="text-center">@item.Total</td>
                                <td class="dropdown">
                                    <img src="~/Content/img/images/dots.png" class="dropbtn" onclick="myFunction()">
                                    <div id="myDropdown" class="dropdown-content"><a href="@Url.Action("DownloadSoldNotes","User",new { noteid = item.Note.ID})">Download Notes</a><a href="@Url.Action("NoteDetails","Home",new { id= item.Note.ID})">View more details</a><a href="#">Unpublish</a></div>
                                </td>
                            </tr>
                        }
                        <tr>
