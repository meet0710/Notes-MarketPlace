<!DOCTYPE html>
<html>
<head>

	<!-- Important meta tags -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!--Favicon-->
	<link rel="shortcut icon" href="../Content/img/images/favicon.ico">

	<!--Title-->
	<title> Notes - MarketPlace</title>

	<!--Google Fonts-->

	<link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

	<!--Bootstrap CSS-->
	<link rel="stylesheet" href="../Content/css/bootstrap.min.css">

	<!--Fontawesome-->
	<link rel="stylesheet" href="../Content/font-awesome/css/font-awesome.css">

	<!--Custom CSS-->
	<link rel="stylesheet" href="../Content/css/style.css">

	<!--Responsive CSS-->
	<link rel="stylesheet" href="../Content/css/responsiveindex.css">

</head>

<body>
	<div id="forgotpwd">
		<div class="bg-img">
			<img src="~/Content/img/pre-login/banner-with-overlay.jpg" alt="bg-img" style="height:auto"/>
			<div id="loginform">
				<div class="logo text-center">
					<img src="../Content/img/pre-login/top-logo.png" alt="logo">
				</div>
				<form method="post">
					@Html.AntiForgeryToken();
					<div id="details">
						<h1 class="text-center">Forgot Password?</h1>
						<p class="text-center">Enter your email address to reset your password</p>


						<p>Email</p>
						<div class="form-group">
							<input type="text" class="form-control" id="email" placeholder="Your Email" name="EmailID">
						</div>

						<div id="submit-btn">
							<button class="btn btn-general btn-yellow" type="submit" title="Submit" role="button">Submit</button>
						</div>

					</div>


				</form>
			</div>
		</div>
	</div>
</body>
</html>