                        <p>@item.country.Name</p>
                    }*@
                <h4 class="title">Notes Details</h4>
                </div>
            </div>
            <div class="row" id="topdetails">
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-5 col-sm-12">
                            <img src="~/Content/img/Notes-Details/1.jpg" alt="notes" class="img-responsive">
                        </div>
                        <div class="col-md-7 col-sm-12 col-xs-12 detail">
                            @foreach (var item in Model)
                            {
                                <h3>@item.note.Title</h3>
                                <h4>@item.category.Name</h4>
                                <br>
                                <p>@item.note.Description</p>
                                <br>
                                if (item.note.IsPaid == true)
                                {
                                    <button class="btn btn-general btn-yellow" title="Download"  onclick="location.href='@Url.Action("Download", "User", new { noteid = item.note.ID })'">Download/&#36;@item.note.SellingPrice</button>
                                }
                                else
                                {
                                <button class="btn btn-general btn-yellow" title="Download" onclick="location.href='@Url.Action("Download", "User", new { noteid = item.note.ID })'">Download/&#36;@item.note.SellingPrice</button>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-5 col-sm-12 col-xs-12 notedetail">
                    @foreach (var item in Model)
                    {
                    <p class="text-left">Institution<span>@item.note.UniversityName</span></p>
                    <p class="text-left">Country<span>@item.country.Name</span></p>
                    <p class="text-left">Course Name<span>@item.note.Title</span></p>
                    <p class="text-left">course Code<span>248705</span></p>
                    <p class="text-left">Professor<span>Mr. Richard Brown</span></p>
                    <p class="text-left">Number of Pages<span>@item.note.NumberofPages</span></p>
                    <p class="text-left">Approved Date<span>@item.note.PublishedDate</span></p>
                    <p class="text-left">
                        Rating<span>
                         @for (int i = 1; i <= item.Rating; i++)
                              {
                                    <img src="~/Content/img/images/star.png" style="width: 20px; height: 20px;">
                              }
                         @for (int j = 5; j > item.Rating; j--)
                              {
                                    <img src="~/Content/img/images/star-white.png" style="width: 20px; height: 20px;">
                              }
                              @item.Total Reviews
                              </span>
                    </p>
                    <p class="text-left report">@item.TotalSpam users marked this note as inappropriate</p>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <hr>
                </div>
            </div>
            <div id="previewandreview">
                <div class="row">
                    <div class="col-md-5 col-sm-12 col-xs-12 ">
                        <h4>Notes Preview</h4>
                        <div class="preview">
                            @foreach (var item in Model)
                            {
                            <embed src="@Url.Content(item.note.NotesPreview)" class="previewpdf">
                            }
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-12 col-xs-12">
                        <h4>Customer Reviews</h4>
                        <div id="customer">
                            <!--Review 1-->
                            <div id="ratings">

                                @foreach (var item in Model)
                                {
                                    if (item.IndRating > 0)
                                    {
                                    <div class="reviews">
                                        <div class="row">
                                            <div class="col-md-2 col-sm-2 col-xs-2 text-center"><img src="@Url.Content(item.ProfilePicture)" class="img-circle" style="height: 45px; width:45px"></div>
                                            <div class="col-md-10 col-sm-10 col-xs-10">

                                                <h5>@item.FirstName @item.LastName</h5>
                                                @for (int i = 1; i <= item.IndRating; i++)
                                                {
                                                    <img src="~/Content/img/images/star.png" style="width: 20px; height: 20px;">
                                                }
                                                @for (int j = 5; j > item.IndRating; j--)
                                                {
                                                    <img src="~/Content/img/images/star-white.png" style="width: 20px; height: 20px;">
                                                }
                                                <br>
                                                <p>@item.Review</p>
                                            </div>

                                        </div>
                                        <hr>
                                    </div>
                                    }
                                }
                                <div class="reviews">
                                    <div class="row">
                                        <div class="col-md-2 col-sm-2 col-xs-2 text-center"><img src="~/Content/img/images/reviewer-1.png" class="img-circle" style="height: 45px; width:45px"></div>
