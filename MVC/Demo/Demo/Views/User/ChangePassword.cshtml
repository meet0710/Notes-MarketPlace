@model Demo.Models.ChangePassword
<html>
<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Favicon-->
    <link rel="shortcut icon" href="~/Content/img/images/favicon.ico">

    <!--Title-->
    <title> Notes - MarketPlace</title>

    <!--Google Fonts-->

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <!--Bootstrap CSS-->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">

    <!--Fontawesome-->
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.css">

    <!--Custom CSS-->
    <link rel="stylesheet" href="~/Content/css/style.css">

    <!--Responsive CSS-->
    <link rel="stylesheet" href="~/Content/css/responsiveindex.css">

</head>

<body>
    <div id="changepwd">
        <div class="bg-img">
            <img src="~/Content/img/pre-login/banner-with-overlay.jpg" alt="bg-image" />
            <div class="container">
                <div class="logo text-center">
                    <img src="~/Content/img/pre-login/top-logo.png" alt="logo">
                </div>
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div id="details">
                        <h1 class="text-center">Change Password</h1>
                        <p class="text-center">Enter your new password to change your password</p>


                        <p>Old Password</p>
                        <p class="text-danger" style="color:red;">@ViewBag.Message</p>
                        <div class="form-group" id="password">
                            <input type="password" class="form-control" id="pwd" placeholder="Enter your password" name="oldpwd">
                            <img class="eye" src="~/Content/img/images/eye.png" onclick="showpassword()">

                        </div>

                        <p>New Password</p>
                        @Html.ValidationMessageFor(model => model.newpwd, null, new { @class = "text-danger" })
                        <div class="form-group" id="repassword">
                            <input type="password" class="form-control" id="repwd" placeholder="Re-enter your password" name="newpwd">
                            <img class="eye" src="~/Content/img/images/eye.png" onclick="showconfirmpassword()">
                        </div>

                        <p>Confirm Password</p>
                        @Html.ValidationMessageFor(model => model.confirmpwd)
                        <div class="form-group" id="password">
                            <input type="password" class="form-control" id="renewpwd" placeholder="Enter your confirm password" name="confirmpwd">
                            <img class="eye" src="~/Content/img/images/eye.png" onclick="shownewconfirmpassword()">
                        </div>

                        <div id="submit-btn">
                            <button class="btn btn-general btn-yellow" type="submit" title="Submit" role="button">Submit</button>
                        </div>


                    </div>


                </form>
            </div>
        </div>
    </div>
    <script src="~Content/js/script.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>