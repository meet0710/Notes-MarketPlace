                        <tr>
                            <th scope="col" class="text-center">Sr No.</th>
                            <th scope="col">Note Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Buyer</th>
                            <th scope="col">Sell Type</th>
                            <th scope="col">Price</th>
                            <th scope="col">Downloaded Date/Time</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody data-tr-per-page="10">

                        @{ int i = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><span>@(++i)</span></td>
                                <td><a href="@Url.Action("NoteDetails","Home",new { id = item.download.NoteID})"><span>@item.download.NoteTitle</span></a></td>
                                <td>@item.download.NoteCategory</td>
                                <td>@item.user.EmailID</td>
                                @if (@item.note.IsPaid == true)
                                {
                                    <td>Paid</td>
                                }
                                else
                                {
                                    <td>Free</td>
                                }
                                <td>@item.download.PurchasedPrice</td>
                                <td>@item.download.AttachmentDownloadedDate</td>
                                <td><a href="@Url.Action("NoteDetails","Home",new { id = item.download.NoteID})"><img src="~/Content/img/pre-login/eye.png"></a></td>
                                <td class="dropdown">
                                    <img src="~/Content/img/images/dots.png" class="dropbtn" onclick="myFunction()">
                                    <div id="myDropdown" class="dropdown-content">
                                        <a href="@Url.Action("DownloadNotes","User",new { noteid = item.download.NoteID})">Download Notes</a>
                                        @{ string str1 = "reviewmodal" + item.download.NoteID;}
                                        <a id="download" onclick=openmodal("@str1")>Add Review/Feedback</a>
                                        @{ string str2 = "reportmodal" + item.download.NoteID;}
                                        <a id="spam" onclick=openmodal1("@str2")>Report as inappropriate</a>
                                    </div>
                                </td>
                            </tr>

                            <div id=@str1 class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <span class="close" onclick=closemodal("@str1")>&times;</span>

                                        <h4>Add Review</h4>
                                        

                                    </div>

                                    <div class="modal-body">
                                        <form method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="NoteID" value="@item.download.NoteID" />
                                            
                                            <input type="hidden" name="AgainstDownloadsID" value="@item.download.ID" />
                                            <div class="rating">
                                                <input id="star5" name="ratings" type="radio" value="5" class="radio-btn hide" />
                                                <label for="star5"><img src="~/Content/img/images/star-white.png"></label>
                                                <input id="star4" name="ratings" type="radio" value="4" class="radio-btn hide" />
                                                <label for="star4"><img src="~/Content/img/images/star-white.png"></label>
                                                <input id="star3" name="ratings" type="radio" value="3" class="radio-btn hide" />
                                                <label for="star3"><img src="~/Content/img/images/star-white.png"></label>
                                                <input id="star2" name="ratings" type="radio" value="2" class="radio-btn hide" />
                                                <label for="star2"><img src="~/Content/img/images/star-white.png"></label>
                                                <input id="star1" name="ratings" type="radio" value="1" class="radio-btn hide" />
                                                <label for="star1"><img src="~/Content/img/images/star-white.png"></label>
                                                <div class="clear"></div>
                                            </div>



                                            <div class="comments">
                                                <p>Comments</p>
                                                <div class="form-group">
                                                    <textarea class="form-control" id="message" name="reviews" placeholder="Comments.."></textarea>
                                                </div>
                                                <button type="submit" id="btnSubmit" class="btn btn-primary btn-sm" formaction="AddReview">Submit</button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>

                            <div id=@str2 class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <span class="close" onclick=closemodal1("@str2")>&times;</span>

                                        <h4>@item.download.NoteTitle</h4>
                                       

                                    </div>

                                    <div class="modal-body">
                                        <form method="post">

                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="NoteID" value="@item.download.NoteID" />
                                            <input type="hidden" name="AgainstDownloadID" value="@item.download.ID" />
                                            <div class="comments">
                                                <p>Remarks</p>
                                                <div class="form-group">
                                                    <textarea class="form-control" id="message" name="remarks" placeholder="Comments..."></textarea>
                                                </div>

                                                <button type="submit" id="btnSubmit" class="btn btn-primary btn-sm" formaction="AddSpamReport">Submit</button>
                                                <button type="button" class="btn btn-primary btn-sm" onclick=closemodal1("@str2")>Cancel</button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>

                        }


